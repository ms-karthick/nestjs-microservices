{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/learn-microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/learn-microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/learn-microservices",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "learn-microservices": {
      "type": "application",
      "root": "apps/learn-microservices",
      "entryFile": "main",
      "sourceRoot": "apps/learn-microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/learn-microservices/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "sales": {
      "type": "application",
      "root": "apps/sales",
      "entryFile": "main",
      "sourceRoot": "apps/sales/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sales/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}